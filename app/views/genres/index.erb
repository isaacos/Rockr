<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <div class="row">

      <div class="container">
        <div class="card bg-dark" >
          <div class="card-header"><h3>Genres</h3></div>

            <div class="p-3 mb-2 bg-dark text-white scroll">
              <ul>

                <%  @genres.each do |genre|%>
                  <li><%= link_to genre.genre_name, genre_path(genre) %><br></li>
                <% end %>
              </ul>
              <a href="/genres/new">Don't See the Genre? Add it here</a>
            </div>
          </div>
        </div>
      </div>

  </body>
</html>
