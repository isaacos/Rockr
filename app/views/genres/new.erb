<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if @errors %>
    <div class="container">

    <div class="text-white bg-danger mb-3" >
      <ul>
      <% @errors.each do |error| %>
        <li><h1><%= error %></h1><br></li>
      <% end %>
    </ul>
      </div>
    </div>
    <% end %>

  <div class="container">
    <div class="card bg-dark">
      <div class="p-3 mb-2 text-white">
          <%= form_for @genre do |f| %>
            <div class="card-header"> <h3><%= f.label :genre_name %>
              <%= f.text_field :genre_name %>
            </h3> </div>
            <p><%= f.label :description %>
            <%= f.text_field :description %>
            </p>
            <%= f.submit "Make the Genre" %>
          <% end %>
        </div>
      </div>
    </div>

  </body>
</html>
