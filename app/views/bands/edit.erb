<% if @errors %>
  <div class="container">
    <div class="text-white bg-danger mb-3" >
      <ul>
        <% @errors.each do |error| %>
          <li><h1><%= error %></h1><br></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<% if @band.musicians.include?(current_musician) %>
  <div class="container">
    <div class="card bg-dark">
      <div class="p-3 mb-2 bg-dark text-white">
        <%= form_for @band do |f| %>
          <div class="card-header"> <h3> <%= f.label :band_name %></h3>
            <%= f.text_field :band_name, class:"form-control"%> </div>
            <%= f.label :tours %>
            <%= f.check_box :tours %>
              <div class="card bg-dark">
                <div class="card-header">
                  <h6> Musicians</h6>
                </div>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Musicians for ya band
                  </button>
                  <div class="dropdown-menu btn btn-secondary btn-sm" aria-labelledby="dropdownMenuButton">
                    <%= f.collection_check_boxes(:musician_ids, @addable_musicians, :id, :name) do |musician|%>
                      <%= musician.label class: 'dropdown-item' do %>
                        <%= musician.check_box + ' ' + musician.text%>
                      <% end %>
                    <% end %>
                  </div>
                </div><br>
                <%= f.submit "Make Ya Band", class: "btn btn-secondary btn-sm"%>
            <% end %>
                </div>
        </div>
      </div>
    </div>
<% end %>
